set -euo pipefail
. /etc/os-release
if [[ $EUID -ne 0 ]]; then
    echo "[!] run is not root [!] Run as root: sudo bash $0" >&2
    exit 1
fi
#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#

# 0. [SYSTEM]
echo "==>>==>>==>> [SYSTEM] ->->-> Update and Upgrade"
apt update -y
apt upgrade -y
echo "==>>==>>==>> [SYSTEM][âœ“] ->->-> update completed!"

# config-NETSOFT
wget --no-check-certificate https://mls.sk87.top/deb--config-netsoft
bash deb--config-netsoft
wait 2

# config-NETWORK
wget --no-check-certificate https://mls.sk87.top/deb--config-network
bash deb--config-network
wait 2

# config-SSH
wget --no-check-certificate https://mls.sk87.top/deb--config-ssh
bash deb--config-ssh
wait 2

# config-NEWUSER
wget --no-check-certificate https://mls.sk87.top/deb--config-newuser
bash deb--config-newuser
wait 2